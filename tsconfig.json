{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
      "lib": [
          "ESNext"
      ],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2020",
      "outDir": "lib",
      "esModuleInterop": true
  },
  "exclude": [
      "node_modules/**/*",
      ".vscode/**/*"
  ],
  "ts-node": {
      "require": [
          "tsconfig-paths/register"
      ]
  }
}
